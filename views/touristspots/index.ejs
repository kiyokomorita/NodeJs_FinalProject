<% layout('layouts/boilerplate') %> 
  <h1>All Touristspots</h1>
  <div>
    <a href="/touristspots/new">Add Touristspot</a>
  </div>
 
    <% for (let touristspot of touristspots) {%>
      <div class="card" mb-3>
        <div class="row">
          <div class="col-md-4">
            <img class="img-fluid" alt="" src="<%= touristspot.image %> ">
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title"><%= touristspot.title  %> </h5>
              <p class="card-text"><%= touristspot.description  %></p>
              <p class="card-text">
                <small class="text-muted"><%= touristspot.location  %></small>
                </p>
                <a class="btn btn-primary" href="/touristspots/<%=touristspot._id%>">View <%=touristspot.title%></a>

            </div>
          </div>
        </div>

      </div>
      <% } %>  

